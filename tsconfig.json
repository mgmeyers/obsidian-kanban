{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es6", "scripthost", "es2018"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es2018"
  },
  "include": ["src/*.ts", "src/*.tsx"]
}
